cmd "01_core" {
    exec = "roscore";
    host = "localhost";
}

cmd "02_start_seadrone" {
    exec = "roslaunch seadrone_control seadrone_start.launch rviz:=false camera:=false veh:=seadrone";
    host = "localhost";
}

cmd "03_camera" {
    exec = "rosrun rpi_ipcam_base cam.py";
    host = "localhost";
}

cmd "rviz" {
    exec = "roslaunch rpi_ipcam_base rviz.launch";
    host = "localhost";
}



script "start_seadrone" 
{
    start cmd "01_core" wait "running";
    wait ms 1500;
    start cmd "02_start_seadrone" wait "running";
    wait ms 1500;
    start cmd "03_camera" wait "running";
    wait ms 1500;
}
